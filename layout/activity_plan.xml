<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09152B"
    tools:context=".Activity.PlanActivity">

    <TextView
        android:id="@+id/plan"
        android:layout_width="360dp"
        android:layout_height="39dp"
        android:background="#286478"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:text="Create Your Own Plan"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/taskName"
        android:layout_width="316dp"
        android:layout_height="46dp"
        app:backgroundTint="#87B6C5"
        android:ems="10"
        android:hint="Task Name"
        android:inputType="textPersonName"
        android:paddingLeft="30px"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#81AEBC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <EditText
        android:id="@+id/taskDuration"
        android:layout_width="316dp"
        android:layout_height="46dp"
        app:backgroundTint="#87B6C5"
        android:ems="10"
        android:hint="Task Duration"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:paddingLeft="30px"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#81AEBC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <EditText
        android:id="@+id/taskStatus"
        android:layout_width="316dp"
        android:layout_height="46dp"
        app:backgroundTint="#87B6C5"
        android:ems="10"
        android:hint="Task Status"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:paddingLeft="30px"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textColorHint="#81AEBC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <Button
        android:id="@+id/addTask"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:text="ADD "
        android:textColor="#09152B"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#87B6C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <Button
        android:id="@+id/viewTask"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:text="View Tasks"
        android:textColor="#09152B"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#87B6C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <ImageView
        android:id="@+id/taskimg"
        android:layout_width="359dp"
        android:layout_height="325dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879"
        app:srcCompat="@drawable/task" />

</androidx.constraintlayout.widget.ConstraintLayout>




